# WordPress REST credentials (Application Passwords)
WP_BASE_URL=https://YOUR-WP-SITE.com
WP_USER=your_username
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Model/runtime
OLLAMA_URL=http://localhost:11434
GEN_MODEL=phi3:mini-128k
GEN_MODEL_FALLBACK=llama3.2:3b
GEN_MODEL_CANDIDATES=phi3:mini-128k,llama3.2:3b
GEN_NUM_CTX=120000
GEN_MAX_CTX=120000
GEN_MAX_PREDICT=3200
EMB_MODEL=nomic-embed-text:latest
EMB_MODEL_FALLBACK=BAAI/bge-small-en-v1.5
# EMB_PROVIDER=auto  # auto | ollama | sentence
CHAT_HTTP_TIMEOUT=300
DUPLICATE_THRESHOLD=0.92
# Set to 1 to bypass duplicate guard (not recommended)
ALLOW_DUPLICATES=0

# Vector DB (local Qdrant recommended)
VDB_BACKEND=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=content
# QDRANT_API_KEY=  # leave empty for local usage

# Neo4j (Knowledge Graph)
# Example Aura URI: neo4j+s://<instance-id>.databases.neo4j.io
NEO4J_URI=neo4j+s://cc372839.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j
